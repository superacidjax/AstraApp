<div class="section">
  <div class="container is-max-desktop">
    <div class="card">
      <div class="card-content">
        <div class="level mb-4">
          <div class="level-left">
            <h1 class="title">Goals</h1>
          </div>
          <div class="level-right">
            <%= link_to "Create New Goal", new_goal_path, class: "button is-primary" %>
          </div>
        </div>

        <div class="table-container">
          <table class="table is-fullwidth is-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @goals.each do |goal| %>
                <tr>
                  <td><%= goal.name %></td>
                  <td><%= truncate(goal.description, length: 100) %></td>
                  <td>
                    <%= link_to "Show", goal_path(goal), class: "button is-light" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
